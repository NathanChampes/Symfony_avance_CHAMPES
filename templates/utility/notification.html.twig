<div class="fixed top-4 right-4 z-50 space-y-4">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="notification transform transition-all duration-300 ease-in-out flex items-center p-5 rounded-[1rem] shadow-xl border-4 {% if label == 'error' %}bg-gradient-to-r from-[#573634]/95 to-[#573634]/90 text-[#F0D08D] border-[#D36E25]{% else %}bg-gradient-to-r from-[#F0D08D]/95 to-[#F0D08D]/90 text-[#573634] border-[#D36E25]{% endif %} relative overflow-hidden hover:scale-105 transform transition-transform">
                <div class="absolute top-0 right-0 w-16 h-16 bg-white/10 rounded-bl-[2rem]"></div>
                <div class="absolute bottom-0 left-0 w-12 h-12 bg-[#D36E25]/10 rounded-tr-[1.5rem]"></div>

                <div class="mr-4">
                    {% if label == 'error' %}
                        <div class="p-2 bg-[#D36E25]/20 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    {% else %}
                        <div class="p-2 bg-[#573634]/20 rounded-full">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    {% endif %}
                </div>

                <div class="flex-1 font-medium">{{ message|trans }}</div>

                <button class="notification-close ml-4 p-1 rounded-full hover:bg-black/10 transition-colors focus:outline-none focus:ring-2 focus:ring-[#D36E25] focus:ring-offset-2 focus:ring-offset-transparent">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>