{% extends 'base.html.twig' %}

{% block title %}{{ 'product.new'|trans }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-[#F0D08D]/20 to-[#D36E25]/10 py-6">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="bg-white overflow-hidden shadow-xl rounded-[2rem] border-4 border-[#F0D08D] relative">
                <div class="absolute top-0 right-0 w-32 h-32 bg-[#D36E25]/10 rounded-bl-[100px]"></div>
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-[#F0D08D]/20 rounded-full transform rotate-12"></div>
                <div class="absolute bottom-0 left-0 w-28 h-28 bg-[#1B6ACC]/10 rounded-tr-[80px]"></div>
                <div class="absolute top-20 left-0 w-16 h-16 bg-[#F0D08D]/20 rounded-br-full"></div>
                <div class="absolute top-1/4 right-10 w-20 h-20 bg-[#F0D08D]/10 rounded-full">
                    <div class="absolute inset-3 bg-white/80 rounded-full"></div>
                    <div class="absolute inset-6 bg-[#F0D08D]/10 rounded-full"></div>
                </div>

                <div class="p-8 relative">
                    <div class="mb-8 flex items-center">
                        <div class="p-3 bg-[#F0D08D]/20 rounded-full mr-4 relative overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-br from-[#F0D08D]/20 to-[#D36E25]/20"></div>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#573634] relative z-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                        </div>
                        <h1 class="text-3xl font-bold text-[#573634]">{{ 'product.new'|trans }}</h1>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
                            {% for field in ['name', 'character', 'description', 'price', 'size', 'stock'] %}
                                <div class="relative group {% if field == 'description' %}sm:col-span-2{% endif %}">
                                    {{ form_label(attribute(form, field), null, {
                                        'label_attr': {'class': 'block text-sm font-medium text-[#573634] mb-2'}
                                    }) }}
                                    <div class="relative">
                                        {{ form_widget(attribute(form, field), {
                                            'attr': {
                                                'class': 'block w-full px-4 py-3 rounded-xl border-2 border-[#F0D08D] bg-white/50 text-[#1B1013] placeholder-[#573634]/50 focus:border-[#D36E25] focus:ring focus:ring-[#D36E25]/20 focus:outline-none transition-all duration-200'
                                            }
                                        }) }}
                                        <div class="absolute inset-0 border-2 border-transparent group-hover:border-[#D36E25]/20 rounded-xl pointer-events-none transition-all duration-200"></div>
                                    </div>
                                </div>
                            {% endfor %}

                            <div class="sm:col-span-2">
                                {{ form_label(form.image, null, {
                                    'label_attr': {'class': 'block text-sm font-medium text-[#573634] mb-2'}
                                }) }}
                                <div class="relative group">
                                    {{ form_widget(form.image, {
                                        'attr': {
                                            'class': 'block w-full text-[#573634] file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-2 file:border-[#F0D08D] file:text-sm file:font-medium file:bg-white file:text-[#573634] hover:file:bg-[#F0D08D]/10 file:transition-all file:duration-200'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-end gap-4 pt-6 relative">
                            <div class="absolute left-0 bottom-0 w-24 h-24 bg-[#F0D08D]/10 rounded-tr-[60px] -z-10"></div>
                            <a href="{{ path('app_product_index') }}" 
                               class="px-6 py-3 text-sm font-medium text-[#573634] bg-white border-2 border-[#F0D08D] rounded-full shadow-md hover:bg-[#F0D08D]/10 transform hover:scale-105 transition-all duration-200">
                                {{ 'action.cancel'|trans }}
                            </a>
                            <button type="submit" 
                                    class="px-6 py-3 text-sm font-medium text-white bg-[#D36E25] border-2 border-[#D36E25] rounded-full shadow-md hover:bg-[#573634] hover:border-[#573634] transform hover:scale-105 transition-all duration-200">
                                {{ 'action.save'|trans }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
